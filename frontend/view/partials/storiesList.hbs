<div class="row mb-3">
    <div class="container-fluid">
        <div class="row">
            {{#each stories}}
            <div class="py-3 col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                <img class="h-17dot5 border-white w-100 cursor-pointer" {{#if imageUrl}} src="{{imageUrl}}" {{else}}
                    src="/assets/naimage.jpg" {{/if}} alt="{{name}}" onclick="directTo('/story/{{encodeUrl id}}')" />
                <div class="text-center mt-2 mb-1 fw-bold text-color-eeeeee cursor-pointer text-nowrap"
                    onclick="directTo('/story/{{encodeUrl id}}')" title="{{name}}">
                    {{limitText name 20}}
                </div>
            </div>
            {{else}}
            <div class="fs-2 my-3">Không tìm thấy kết quả nào!</div>
            {{/each}}
        </div>
    </div>
</div>