<div class="container h-100vh">
    <div class="row">
        <div class="col-md-12 fs-5 mt-4 mb-2 text-color-56ccf2 fw-bold">
            <i class="fa-solid fa-flag pe-1"></i>
            Kết quả tìm kiếm với từ khoá: <span class="text-white">{{keyword}}</span>
        </div>
    </div>

    {{> storiesList}}

    <div class="row mt-3 mb-4">
        <ul class="pagination d-flex align-items-center justify-content-center">
            <li></li>
            {{#ifNotEqual curPage 1}}
            <li class="page-item mx-2"><a class="page-link" href="/search?keyword={{keyword}}"><i
                        class="fa-solid fa-backward-step"></i></a></li>
            <li class="page-item mx-2"><a class="page-link"
                    href="/search?keyword={{keyword}}&page={{plus curPage -1}}"><i
                        class="fa-solid fa-chevron-left"></i></a></li>
            {{/ifNotEqual}}

            {{#genPagination curPage totalPages}}
            <li class="page-item mx-2">
                <a class="page-link {{#ifEqual this ../curPage}}active{{/ifEqual}}"
                    href="/search?keyword={{../keyword}}&page={{this}}">{{this}}</a>
            </li>
            {{/genPagination}}

            {{#ifNotEqual curPage totalPages}}
            <li class="page-item mx-2"><a class="page-link"
                    href="/search?keyword={{keyword}}&page={{plus curPage 1}}"><i
                        class="fa-solid fa-chevron-right"></i></a></li>
            <li class="page-item mx-2"><a class="page-link" href="/search?keyword={{keyword}}&page={{totalPages}}"><i
                        class="fa-solid fa-forward-step"></i></a></li>
            {{/ifNotEqual}}
            <li></li>
        </ul>
    </div>
</div>