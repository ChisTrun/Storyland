<div class="container min-vh-100">
    <div class="row">
        <div class="col-md-12 fs-5 mt-4 mb-2 notify-text fw-bold">
            <i class="fa-solid fa-flag pe-1"></i>
            Trình xem sách điện tử
        </div>
    </div>

    <!-- Biểu Mẫu Tải Lên Tệp -->
    <div class="container rounded main-container my-2 p-4 shadow-sm border-upload">
        <form id="uploadForm">
            <label for="file">Chọn tệp ebook từ thiết bị:</label>
            <input type="file" id="file" name="file" class="choose-file-btn" accept=".pdf,.epub">
            <input type="button" value="Tải lên" class="ms-0" id="upload-file-btn" onclick="uploadFile()">
        </form>
    </div>

    <!-- Thông Báo Lỗi -->
    <div id="error" class="mt-3 text-center fs-5 alert alert-warning" style="display: none;"></div>

    <div class="row mt-3 mb-3 justify-content-center align-items-center g-2">
        <div class="bookRender">
            <!-- Trình Xem PDF -->
            <div id="pdfViewer" class="border-upload shadow-sm vh-95 mb-5">
                <object id="pdfObject" type="application/pdf" width="100%" height="100%">
                    <p>Không thể hiển thị tệp PDF. <a id="pdfLink" href="" target="_blank">Tải xuống</a> thay thế.</p>
                </object>
            </div>

            <!-- Trình Xem EPUB -->
            <div id="epubViewer" class="mb-3">
                <div class="row" id="container">
                    <div class="col-3">
                        <div class="card text-start vh-95 border-upload shadow-sm">
                            <div class="card-header text-muted">
                                <h3 class="card-title m-1 p-1">Mục lục</h3>
                            </div>
                            <div class="card-body m-0 p-0 scroll-card">
                                <p class="card-text">
                                <div id="toc"></div>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-9">
                        <div class="card text-start vh-95 border-upload shadow-sm">
                            <div class="card-header text-muted">
                                <h3 class="card-title m-1 p-1 bg-coor">Nội dung</h3>
                            </div>
                            <div class="card-body m-0 p-0">
                                <div class="col-8 w-100" id="viewerContainer" style="height: 100%;">
                                    <iframe id="viewer" style="width: 100%; height: 100%;"></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>