<div class="container rounded main-container min-vh-100 my-4 p-4">
    <div class="row fw-bold mb-2">
        <nav style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                &nbsp;<li class="mx-2">/</li>&nbsp;
                <li class="breadcrumb-item" aria-current="page">{{name}}</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xxl-2 col-xl-3 col-md-12 col-sm-12 col-12 mb-4">
                    <div class="text-center">
                        <img id="story-image" {{#if imageUrl}} src="{{imageUrl}}" {{else}} src="/assets/naimage.jpg"
                            {{/if}} alt="{{name}}" />
                    </div>
                    <div class="mt-3 text-center">
                        <button type="button" class="btn fs-5" id="ebook-btn">
                            XUẤT EBOOK
                        </button>
                    </div>
                </div>
                <div class="col-xxl-9 col-xl-8 col-md-12 col-sm-12 col-12 mt-0 ps-3 pe-0 mb-3" id="story-info">
                    <div class="fw-bold fs-3 pb-2">{{name}}</div>
                    <div class="container-fluid px-0">
                        <div class="row py-2">
                            <div class="col-md-3 fw-bold">
                                <i class="fa-solid fa-user"></i>
                                Tác giả
                            </div>
                            <a class="col-md-9 d-block" href="/author/{{author.name}}{{author.id}}">
                                {{#if author}}{{author.name}}{{else}}n/a{{/if}}
                            </a>
                        </div>
                        <div class="row py-2">
                            <div class="col-md-3 fw-bold">
                                <i class="fa-solid fa-tower-broadcast"></i>
                                Trạng thái
                            </div>
                            <div class="col-md-9">
                                {{#if status}}{{status}}{{else}}n/a{{/if}}
                            </div>
                        </div>
                        <div class="row py-2">
                            <div class="col-md-3 fw-bold">
                                <i class="fa-solid fa-tags"></i>
                                Thể loại
                            </div>
                            <div class="col-md-12 mt-2">
                                {{#each categories}}
                                <a type="button" class="category-tag rounded py-1 px-2 me-2"
                                    href="/category/{{name}}{{id}}">
                                    {{name}}
                                </a>
                                {{else}}
                                n/a
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid px-0 py-2">
                        {{#isDefined firstIndex}}
                        <a type="button" class="rounded me-2 p-2 start-chapter-btn"
                            href="/story/{{encodeUrl id}}/{{firstIndex}}/{{serverIndex}}">
                            <i class="fa-solid fa-book-open"></i>
                            Đọc từ đầu
                        </a>
                        {{/isDefined}}
                        {{#isDefined conIndex}}
                        <a type="button" class="rounded mx-2 p-2 con-chapter-btn"
                            href="/story/{{encodeUrl id}}/{{conIndex}}/{{serverIndex}}">
                            <i class="fa-solid fa-location-arrow"></i>
                            Đọc tiếp
                        </a>
                        {{/isDefined}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-2">
        <div class="col-md-12 fw-bold">
            <i class="fa-solid fa-circle-info pe-1"></i>
            Giới thiệu
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-12 px-3">
            {{#if description}}{{{description}}}{{else}}n/a{{/if}}
        </div>
    </div>
    <div class="row mb-2">
        <div class="fw-bold">
            <i class="fa-solid fa-database pe-1"></i>
            Danh sách chương
        </div>
    </div>
    <div class="row chapters-list rounded mb-2 py-3 mx-0 ps-5">
        <div id="flex-chapters-container">
            {{#each chapters}}
            <a class="d-flex" href="/story/{{belong.id}}/{{index}}/{{../serverIndex}}" title="{{name}}">
                {{limitText name 45}}</a>
            {{/each}}
        </div>
        <div class="row mb-2">
            <ul class="pagination d-flex align-items-center justify-content-center">
                <li></li>
                {{#ifNotEqual curPage 1}}
                <li class="page-item mx-2"><a class="page-link" href="/story/{{encodeUrl id}}#chapters-list"><i
                            class="fa-solid fa-backward-step"></i></a></li>
                <li class="page-item mx-2"><a class="page-link"
                        href="/story/{{encodeUrl id}}&page={{plus curPage -1}}#chapters-list"><i
                            class="fa-solid fa-chevron-left"></i></a></li>
                {{/ifNotEqual}}

                {{#genPagination curPage totalPages}}
                <li class="page-item mx-2">
                    <a class="page-link {{#ifEqual this ../curPage}}active{{/ifEqual}}"
                        href="/story/{{encodeUrl ../id}}?page={{this}}#chapters-list">{{this}}</a>
                </li>
                {{/genPagination}}

                {{#ifNotEqual curPage totalPages}}
                <li class="page-item mx-2"><a class="page-link"
                        href="/story/{{encodeUrl id}}?page={{plus curPage 1}}#chapters-list"><i
                            class="fa-solid fa-chevron-right"></i></a></li>
                <li class="page-item mx-2"><a class="page-link"
                        href="/story/{{encodeUrl id}}?page={{totalPages}}#chapters-list"><i
                            class="fa-solid fa-forward-step"></i></a></li>
                {{/ifNotEqual}}
                <li></li>
            </ul>
        </div>
    </div>
</div>